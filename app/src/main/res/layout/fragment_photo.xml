<?xml version="1.0" encoding="utf-8"?>
<com.faltenreich.skeletonlayout.SkeletonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.PhotoFragment"
    app:shimmerAngle="45">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/photoImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/photo" />

    <com.example.objectsrecognizer.ui.views.OverlayView
        android:id="@+id/photoOverlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</com.faltenreich.skeletonlayout.SkeletonLayout>